{
  "compileOnSave": true,
  "compilerOptions": {
    "outDir": "./dist/",
    "module": "commonjs",
    "target": "es2017",
    "sourceMap": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "lib": ["dom", "es2017"],
    "types": ["node", "react"],
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    // "jsxFactory": "ForgeUI.createElement",
    // "jsxFragmentFactory": "React.Fragment",
    // "jsx": "react",

    "jsx": "react-jsx",
    "typeRoots": [
      "./node_modules/@types"
    ],
    "baseUrl": "."
  },
  "include": [ "./src/**/*" ],
  "exclude": [ "node_modules", "build", "dist" ]
}